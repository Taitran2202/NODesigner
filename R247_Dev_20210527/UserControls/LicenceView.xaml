<UserControl x:Class="NOVisionDesigner.UserControls.LicenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NOVisionDesigner.UserControls" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,5">
        <Grid>
            <StackPanel  Orientation="Horizontal" VerticalAlignment="Top">
                <Label Content="Licence key"  HorizontalAlignment="Left"  />
                <dxe:TextEdit x:Name="lb_key" IsReadOnly="True" ShowBorder="False" 
                              FontWeight="SemiBold"  Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
            <dxe:TextEdit IsReadOnly="True" Focusable="False" BorderThickness="0"  x:Name="txt_eula"
                          TextWrapping="Wrap"
                         Margin="0,40,0,0" HorizontalScrollBarVisibility="Disabled" 
                         VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Block.LineHeight="1"  />
        </Grid>
    </Grid>
</UserControl>
