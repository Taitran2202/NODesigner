<UserControl x:Class="NOVisionDesigner.Designer.Controls.ProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NOVisionDesigner.Designer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Border x:Name="container" Background="White" BorderBrush="#FF0956C5" BorderThickness="1"  >

        <Grid x:Name="grid_progress" Background="#FF1A6ADE" Width="50" HorizontalAlignment="Left" >
            <TextBlock x:Name="txt_percent" HorizontalAlignment="Right"  VerticalAlignment="Center" Text="20" Foreground="White" Margin="0,0,2,0"></TextBlock>
        </Grid>
    </Border>
</UserControl>
