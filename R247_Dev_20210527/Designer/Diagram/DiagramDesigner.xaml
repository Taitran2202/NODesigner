<UserControl x:Class="NOVisionDesigner.Designer.Diagram.DiagramDesigner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:s="clr-namespace:NOVisionDesigner.Designer.Diagram"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#FFF3F3F3">
    <UserControl.Resources>
        

        

    </UserControl.Resources>

    <Grid>

        

        <Canvas x:Name="DesignerCanvas" MouseDown="canvas_mouseDown" MouseLeave="DesignerCanvas_MouseLeave" MouseUp="DesignerCanvas_MouseUp"
                MouseWheel="DesignerCanvas_MouseWheel"
            ClipToBounds="True"
            SnapsToDevicePixels="True" Background="#FFF3F3F3" Margin="0">
            <Canvas.LayoutTransform>
                <ScaleTransform x:Name="st"></ScaleTransform>
            </Canvas.LayoutTransform>

            

        </Canvas>
    </Grid>
</UserControl>
